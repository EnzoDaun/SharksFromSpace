{
  "version": 2,
  "builds": [
    {
      "src": "serverless.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["src/**"]
      }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "serverless.ts" }
  ],
  "functions": {
    "serverless.ts": {
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}